<h1>Listing users</h1>

<%= link_to 'New User', new_user_path %>  || <%= link_to 'Home', "/" %>
<br />

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Sex</th>
    <th>Facebook</th>
    <th>Twitter</th>
    <th>Linkedin</th>
    <th>Institution</th>
    <th>Contact</th>
    <th>Available</th>
    <th>Homepage</th>
    <th>Aboutme</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.sex %></td>
    <td><%= user.facebook %></td>
    <td><%= user.twitter %></td>
    <td><%= user.linkedin %></td>
    <td><%= user.institution %></td>
    <td><%= user.contact %></td>
    <td><%= user.available %></td>
    <td><%= user.homepage %></td>
    <td><%= user.aboutme %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>