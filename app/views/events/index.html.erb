<h1>Listing events</h1>

<%= link_to 'New Event', new_event_path %> || <%= link_to 'Home', "/" %>
<br />

<table>
  <tr>
    <th>Title</th>
    <th>Time - Local</th>
    <th>Track</th>
    <th>Speaker</th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.time.hour %>:<%= event.time.min %> - <%= event.room.name %> </td>
    <td><% if event.track_id != nil %> <%= event.track_name %><% else %> --- <% end %></td>
    <td><% if event.user_id != nil %> <%= event.user.name %><% else %> --- <% end %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>